# Supabase Configuration (defaults to local dev, overridden by Vercel for deployments)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Project References (for migrations)
# Get from: Supabase Dashboard → Settings → General → Reference ID
SUPABASE_QA_PROJECT_REF=your_qa_project_ref
SUPABASE_PROD_PROJECT_REF=your_prod_project_ref

# Supabase QA Environment (for automated data sync)
NEXT_PUBLIC_SUPABASE_URL_QA=your_qa_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY_QA=your_qa_anon_key
SUPABASE_SERVICE_ROLE_KEY_QA=your_qa_service_role_key

# Supabase Production Environment (for automated data sync)
NEXT_PUBLIC_SUPABASE_URL_PROD=your_prod_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY_PROD=your_prod_anon_key
SUPABASE_SERVICE_ROLE_KEY_PROD=your_prod_service_role_key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_random_secret_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MySQL (for migration only)
MYSQL_HOST=your_mysql_host
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_mysql_database
